<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/diary_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <ImageView
            android:id="@+id/delete_item_diary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/delete"
            android:backgroundTint="@color/red"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageDiary"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nameDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageDiary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.146" />

        <TextView
            android:id="@+id/categoryDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageDiary"
            app:layout_constraintTop_toBottomOf="@+id/nameDiary"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/setDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageDiary"
            app:layout_constraintTop_toBottomOf="@+id/categoryDiary" />

        <TextView
            android:id="@+id/repDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REP"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/setDiary"
            app:layout_constraintTop_toTopOf="@+id/setDiary" />

        <TextView
            android:id="@+id/carbDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARB"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageDiary"
            app:layout_constraintTop_toBottomOf="@+id/categoryDiary" />

        <TextView
            android:id="@+id/protDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROT"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/carbDiary"
            app:layout_constraintTop_toTopOf="@+id/carbDiary" />

        <TextView
            android:id="@+id/fatDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAT"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/protDiary"
            app:layout_constraintTop_toTopOf="@+id/protDiary" />

        <TextView
            android:id="@+id/calDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAL"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/fatDiary"
            app:layout_constraintTop_toTopOf="@+id/fatDiary" />

        <TextView
            android:id="@+id/testA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="G"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/categoryDiary"
            app:layout_constraintTop_toTopOf="@+id/categoryDiary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>